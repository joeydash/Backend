<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">


    <link rel="shortcut icon" href="./img/ic_launcher/res/mipmap-hdpi/ic_launcher.png" />
    <title>Backend panel</title>

    <link rel="stylesheet" href="./vendors/w3.css">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.13/dist/vue.js"></script>
    <<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="./css/tetris.css">
</head>
<body style="background-image: url('./img/833.jpg')">
<div id="app">
    <div class="container-fluid animated bounce" v-if="!isLoading" >
        <div class="row">

            <div class="col-sm-4 col-sm-offset-4 card" style="margin-top: 30px; background: #FFFFFF;padding: 20px;">

                <center>
                    <img src="./img/ic_launcher/res/mipmap-hdpi/ic_launcher.png">
                    <span style="font-size:24px;">Backend Portal</span>
                </center>
                <div style="margin: 40px;">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input v-model="username" type="username" class="form-control" id="username" placeholder="Enter username" name="username">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        <input  v-model="password" type="password" class="form-control" id="password" placeholder="Enter password" name="password">
                    </div>
                    <button @click="signin" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        </div>
    </div>
    <div class='tetris' v-if="isLoading">
        <div class='block1'></div>
        <div class='block2'></div>
        <div class='block3'></div>
        <div class='block4'></div>
    </div>
    <div class="footer container-fluid">
        <div class="row">
            <div class="col-sm-3 pull-right card" style="padding : 5px; background: white;"><img src="./img/flash.svg" style="width: 16px; height: 16px;"> powered by joeydash</div>
        </div>
    </div>
</div>
</body>
<script src="./js/script.js"></script>
</html>


